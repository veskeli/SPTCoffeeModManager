<Window x:Class="SPTCoffeeModManager.ServerConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SPTCoffeeModManager"
        mc:Ignorable="d"
        Background="#1e1e1e" Foreground="White"
        Title="ServerConfigWindow" Height="410" Width="450"
        ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />    <!-- Header -->
            <RowDefinition Height="Auto" />  <!-- Description -->
            <RowDefinition Height="*" />     <!-- Form / Content -->
            <RowDefinition Height="Auto" />  <!-- Footer / Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#232323" Height="40" MouseDown="Header_MouseDown" Margin="0,0,0,10">
            <Grid>
                <TextBlock Text="Server Configuration"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="White" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                    <Button Content="—" Width="30" Height="30" Margin="0,0,5,0"
                            Click="MinimizeButton_Click"
                            Background="Transparent" Foreground="White" BorderBrush="Transparent" />
                    <Button Content="✕" Width="30" Height="30"
                            Click="CloseButton_Click"
                            Background="Transparent" Foreground="White" BorderBrush="Transparent" />
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Form Fields -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="400">
                <!-- Server Address -->
                <TextBlock Text="Server Address" Margin="0,4" Foreground="White" />
                <TextBox x:Name="AddressTextBox"
                         Height="30"
                         Margin="0,6,0,0"
                         Background="#2b2b2b"
                         BorderBrush="#3a3a3a"
                         Foreground="White" />
                <!-- Port -->
                <TextBlock Text="Port" Margin="0,12,0,4" Foreground="White" />
                <TextBox x:Name="PortTextBox"
                         Height="30"
                         Margin="0,6,0,0"
                         Background="#2b2b2b"
                         BorderBrush="#3a3a3a"
                         Foreground="White" />
                <!-- SPT Server Address -->
                <TextBlock Text="SPT Server Address" Margin="0,12,0,4" Foreground="White" />
                <TextBox x:Name="SptServerAddressTextBox"
                         Height="30"
                         Margin="0,6,0,0"
                         Background="#2b2b2b"
                         BorderBrush="#3a3a3a"
                         Foreground="White" />
                <!-- Secret Key -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Secret Key" Margin="0,12,0,4" Foreground="White" />
                    <Button Content="Toggle Visibility"
                            Click="ToggleSecretKeyVisibilityButton_Click"
                            Width="120"
                            Height="24"
                            Margin="10,12,0,4"
                            Background="DarkCyan"
                            Foreground="White"
                            BorderBrush="#3c3c3c"
                            Visibility="Collapsed"/>
                </StackPanel>
                <PasswordBox x:Name="SecretKeyTextBox"
                             Height="30"
                             Margin="0,6,0,0"
                             Background="#2b2b2b"
                             BorderBrush="#3a3a3a"
                             Foreground="White" />
            </StackPanel>
        </Grid>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button x:Name="SaveButton"
                    Click="SaveButton_Click"
                    Content="Save"
                    Width="110"
                    Height="34"
                    Margin="8,0"
                    Background="#007acc"
                    Foreground="White"
                    BorderBrush="Transparent" />

            <Button x:Name="CancelButton"
                    Click="CancelButton_Click"
                    Content="Cancel"
                    Width="110"
                    Height="34"
                    Margin="8,0"
                    Background="Transparent"
                    Foreground="White"
                    BorderBrush="#3a3a3a" />
        </StackPanel>
    </Grid>
</Window>
