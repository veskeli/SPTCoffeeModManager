<Window x:Class="SPTCoffeeModManager.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SPTCoffeeModManager"
        mc:Ignorable="d"
        Background="#1e1e1e" Foreground="White"
        Title="UpdateWindow" Height="180" Width="500"
        ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />    <!-- Header -->
            <RowDefinition Height="*" />     <!-- Status/Content -->
            <RowDefinition Height="Auto" />    <!-- Button/Footer -->
        </Grid.RowDefinitions>
        <!-- Header -->
        <local:WindowHeader Grid.Row="0" HeaderText="Update Available" />

        <TextBlock x:Name="StatusText"
                   Grid.Row="1"
                   Text="New Update Available!"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="22"
                   Margin="20"/>
        <Button x:Name="UpdateButton"
                Click="UpdateButton_Click"
                Grid.Row="2"
                Content="Update"
                Width="120"
                Height="30"
                HorizontalAlignment="Center"
                Margin="0,10,0,10"/>
    </Grid>
</Window>
